<% provide(:title, "Password reset") %>
<h1>Password reset</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(reset_password_path) do |f| %>

      <%= label_tag "email" %>
      <%= text_field_tag "email" %>

      <%= submit_tag "Reset password", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>