<% provide(:title, "Password reset final form") %>
<h1>Password reset</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(reset_password_finish_path) do |f| %>

      <%= label_tag "email:" %>
      <%= @user.email %>
      <%= hidden_field_tag "token", value: @user.password_reset_token%>

      <%= label_tag "new password" %>
      <%= password_field_tag "new_password"%>

      <%= submit_tag "Reset password", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>