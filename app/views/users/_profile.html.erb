<%= form_for(@profile, html:{class: "form-horizontal"}) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :birth_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :birth_date, :value => @profile.try(:birth_date).try(:strftime,'%Y-%m-%d %H:%M'), class: 'form-control', :placeholder => "YYYY-MM-DD hh:mm" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :country, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bio, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_area :bio, size: "80x6", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :height, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :height, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :weight, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group col-sm-10">
    <div class="pull-right">
      <%= f.submit %>
    </div>
  </div>
<% end %>
