<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @excercise.name %>
</p>

<% unless @excercise.description.empty? %>
	<p>
	  <strong>Description:</strong>
	  <%=  raw @excercise.description.gsub(/\n/, '<br>') %>
	</p>
<% end %>

<% unless @excercise.url.empty? %>
	<p>
	  <strong>Video:</strong>
	  <br>
	  <iframe width="425" height="349" src="<%= @excercise.url %>" frameborder="0" allowfullscreen></iframe>
	</p>
<% end %>

<%= link_to 'Edit', edit_excercise_path(@excercise) %> |
<%= link_to 'Back', excercises_path %>
